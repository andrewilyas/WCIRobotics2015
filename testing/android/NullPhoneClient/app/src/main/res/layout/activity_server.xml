<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nulldev.ga.nullphoneclient.ServerActivity"
    android:id="@+id/serverLayout">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/serverProgress"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:indeterminate="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ServerTitle"
        android:id="@+id/serverTitle"
        android:layout_above="@+id/serverProgress"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stopButtonValue"
        android:id="@+id/serverStopButon"
        android:layout_below="@+id/serverProgress"
        android:layout_centerHorizontal="true"
        android:onClick="onStopButton" />

    <SurfaceView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/cameraView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/serverProgress"
        android:layout_alignEnd="@+id/serverProgress" />

</RelativeLayout>
